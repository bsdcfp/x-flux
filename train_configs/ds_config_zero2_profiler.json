    "gradient_clipping": 1.0,
    "flops_profiler": {
        "enabled": true,
        "profile_step": 4,
        "module_depth": -1,
        "top_modules": 1,
        "detailed": true,
        "output_file": "flops_profiler.txt"
    }
}